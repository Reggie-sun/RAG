# Runtime endpoints
OPENAI_API_KEY=sk-your-key
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=qwen2.5-coder:14b
OLLAMA_TIMEOUT=30

# Feature flags
ENABLE_GPU=true
CUDA_DEVICE=cuda:0
ENABLE_QUEUE=true
USE_RERANK=true

# Embeddings / models
EMBEDDING_MODEL_PATH=/app/models/bge-m3
EMBEDDING_DEVICE=cuda

# Web search providers (optional)
TAVILY_API_KEY=
WEBSEARCHAPI_KEY=
EXA_API_KEY=
FIRECRAWL_API_KEY=
WEB_SEARCH_PROVIDERS=tavily,websearchapi,exa,firecrawl

# Frontend defaults
RAG_API_PORT=18000
VITE_API_BASE_URL=http://localhost:18000
VITE_CPU_API_BASE_URL=http://localhost:8001

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_LOGLEVEL=info
CELERY_CONCURRENCY=2

# Misc
INTENT_LLM_TIMEOUT=4.5
RETRIEVAL_TOP_K=6
