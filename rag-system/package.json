{
  "name": "rag-system",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "predev": "npm install --prefix frontend",
    "prebuild": "npm install --prefix frontend",
    "dev": "concurrently \"npm run dev --prefix frontend\" \"uvicorn backend.main:app --reload --host 0.0.0.0 --port 8000\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "uvicorn backend.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build --prefix frontend",
    "lint": "npm run lint --prefix frontend"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
